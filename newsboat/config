browser linkhandler
macro , open-in-browser
macro v set browser "setsid -f mpv"; open-in-browser ; set browser linkhandler

# unbind keys
unbind-key g
unbind-key j
unbind-key k
unbind-key J
unbind-key K

# bind keys - vim style
bind-key j down
bind-key k up
bind-key l open
bind-key h quit
bind-key g home
bind-key G end

browser qutebrowser

auto-reload yes
reload-time 10
