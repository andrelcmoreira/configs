browser linkhandler
macro , open-in-browser
macro v set browser "setsid -f mpv"; open-in-browser ; set browser linkhandler

# unbind keys
unbind-key ENTER
unbind-key j
unbind-key k
unbind-key J
unbind-key K

# bind keys - vim style
bind-key j down
bind-key k up
bind-key l open
bind-key h quit

browser qutebrowser
reload-time 10
